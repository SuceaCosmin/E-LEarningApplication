@model E_LearningApplication_Final.ViewModels.QuestionFormViewModel
@{
    ViewBag.Title = "QuestionForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Question</h2>

@using (Html.BeginForm("Save", "Question", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Question.Body)
        @Html.TextBoxFor(m => m.Question.Body, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Question.Body)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Question.AnswerA)
        @Html.TextBoxFor(m => m.Question.AnswerA, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Question.AnswerA)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Question.AnswerB)
        @Html.TextBoxFor(m => m.Question.AnswerB, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Question.AnswerB)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Question.AnswerC)
        @Html.TextBoxFor(m => m.Question.AnswerC, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Question.AnswerC)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Question.AnswerD)
        @Html.TextBoxFor(m => m.Question.AnswerD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Question.AnswerD)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Question.RightAnswer_Id)
       @Html.DropDownListFor(m => m.Question.RightAnswer_Id, new SelectList(Model.Choice, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Question.RightAnswer_Id)
    </div>
  
@Html.HiddenFor(m => m.Course_id);
    @Html.AntiForgeryToken()
    <button type="submit" value="@Model.Course_id" class="success btn btn-success">Save</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
<script>
        $(".success").click(function () {
            toastr.success('Question added!', 'Success Alert', { timeOut: 5000 })
        });
</script>
}