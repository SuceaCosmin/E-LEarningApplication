@model E_LearningApplication_Final.ViewModels.ProfessorDetails


@{
    ViewBag.Title = Model.Professor.Email;
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">
    <div class="span3 well">
        <center>
            <a href="#aboutModal" data-toggle="modal" data-target="#myModal">
                @{

                    var base64 = Convert.ToBase64String(Model.Professor.UserPhoto);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                }
                <img src="@imgsrc" name="aboutme" width="140" height="140" class="img-circle">
            </a>
            <h3>@Model.Professor.Email</h3>
            <em>Click For More</em>
        </center>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title" id="myModalLabel">More About @Model.Professor.Email</h4>
                </div>
                <div class="modal-body">
                    <center>
                        @{

                     base64 = Convert.ToBase64String(Model.Professor.UserPhoto);
                     imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                }

                        <img src="@imgsrc" name="aboutme" width="140" height="140" border="0" class="img-circle"></a>


                        <h3 class="media-heading">@Model.Professor.FullName</h3>
                    </center>
                    <hr>
                    <center>
                        <p class="text-left">
                            <strong>CV </strong><br>
                            <center>
                              @Html.ActionLink("View CV", "ViewCV", new { id = @Model.Professor.Id }, htmlAttributes: new { @class = "btn btn-link" }) 
                            </center>
                        </p>
                        <br>
                    </center>
                </div>
                <div class="modal-footer">
                    <center>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </center>
                </div>
            </div>
        </div>
    </div>


    <table id="courses" class="table table-bordered table-hover">
        <thead>
            <tr>


                <th>Course Name</th>
               

            </tr>
        </thead>
        <tbody>

            @{
                foreach (var course in Model.ProfessorCourses)
                {
                    <tr>
                        <td>@Html.ActionLink(@course.Name, "ProfessorDetails", "Course", new { id = course.Id }, null)</td>
                    


                    </tr>
                }
            }


        </tbody>
    </table>


    <hr/>


</div>