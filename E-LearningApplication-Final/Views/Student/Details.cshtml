@model E_LearningApplication_Final.ViewModels.StudentDetails


@{
    ViewBag.Title = Model.Student.Email;
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">
    <div class="span3 well">
        <center>
            <a href="#aboutModal" data-toggle="modal" data-target="#myModal">
                @{

                    var base64 = Convert.ToBase64String(Model.Student.UserPhoto);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                }
                <img src="@imgsrc" name="aboutme" width="140" height="140" class="img-circle">
            </a>
            <h3>@Model.Student.Email</h3>
        
        </center>
    </div>
  

<hr/>



<table id="courses" class="table table-bordered table-hover">
    <thead>
        <tr>


            <th>Subscriptions</th>
         

        </tr>
    </thead>
    <tbody>

        @{
            foreach (var course in Model.StudentCourses)
            {
                <tr>
                    <td>@Html.ActionLink(@course.Name, "Details", "Course", new { id = course.Id }, null)</td>
             

                </tr>
            }
        }


    </tbody>
</table>